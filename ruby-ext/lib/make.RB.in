require 'ftools'
require 'kconv'

DEFAULT_KCODE = "@@mhc_default_kcode@@"
LIBDIR = "@@mhc_libdir@@"
DISABLE_EXT = @@mhc_disable_ext@@

MAKE_FILES = %w(mhc-kconv.rb)
INSTALL_FILES = %w(mhc-date.rb mhc-gtk.rb mhc-kconv.rb
                   mhc-palm.rb mhc-schedule.rb mhc-signal.rb)

def default()
  files = MAKE_FILES
  while filename = files.shift()
    fin = File::open(filename + ".in")
    fout = File::open(filename, "w")
    print "creating: " + filename + "\n";
    while line = fin.gets()
      fout.puts(gsub("@mhc_default_kcode@", DEFAULT_KCODE))
    end
  end
end

def clean()
  files = MAKE_FILES + "make.rb"
  while filename = files.shift()
    if File::exist?(filename)
      File::delete(filename)
      print "removing: " + filename + "\n";
    end
  end
end

def install()
  if DISABLE_EXT
    files = INSTALL_FILES
    while filename = files.shift()
      File::install(filename, LIBDIR, 0644, true)
    end
  end
end

def print_usage()
  print <<END
Usage: Makefile.rb [target]
target can be none, install or clean.
END
end

if (ARGV.size() == 0)
  default()
else
  case ARGV[0]
  when "install"
    install()
  when "clean"
    clean()
  else
    print_usage();
    exit(1);
  end
end

